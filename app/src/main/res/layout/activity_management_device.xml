<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/SwipeRefresh"
    android:background="#fcfcfc"
    android:layout_height="match_parent"
    tools:context=".View.ManagementDevice">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:minHeight="100dp"
                android:background="@drawable/custom_bg_shopp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/no_image"
                    android:id="@+id/img_Logo_Management"
                    android:layout_gravity="center_vertical"
                    android:layout_height="70dp"
                    tools:ignore="ContentDescription" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:id="@+id/txt_nameAPP_Management"
                            android:textSize="21sp"
                            android:text=""/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:text="@string/Version"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:paddingStart="1dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:paddingEnd="3dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:id="@+id/txt_version_name"
                                android:textStyle="italic|bold"
                                android:text=""/>

                        </LinearLayout>
                        <Button
                            android:layout_width="wrap_content"
                            android:text="@string/AboutUs"
                            android:background="@android:color/transparent"
                            android:textAllCaps="false"
                            android:id="@+id/btn_About"
                            android:textStyle="normal"
                            android:textSize="17sp"
                            android:textColor="#fff"
                            android:drawablePadding="5dp"
                            android:drawableEnd="@drawable/about_us_white"
                            android:layout_height="35dp"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="2dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="2dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            android:clickable="false"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/btn_Device"
                            app:cardBackgroundColor="#fff"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="3dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:minHeight="80dp"
                                android:gravity="center_vertical"
                                android:layout_height="match_parent">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="60dp"
                                    android:layout_marginStart="5dp"
                                    android:id="@+id/imgUser"
                                    android:src="@drawable/icon_person"
                                    android:background="@android:color/transparent"
                                    app:civ_border_color="@color/white"
                                    app:civ_border_width="2dp"
                                    android:layout_height="55dp"  />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textStyle="bold|italic"
                                        android:textSize="17sp"
                                        android:paddingEnd="3dp"
                                        android:id="@+id/txt_User_Name_Device"
                                        android:paddingStart="5dp"
                                        android:textColor="#000"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/ExpiryDate"
                                            android:textStyle="bold|italic"
                                            android:layout_gravity="center_vertical"
                                            android:textSize="14sp"
                                            android:paddingStart="5dp"
                                            android:textColor="#000"
                                            tools:ignore="RtlSymmetry" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:textStyle="bold|italic"
                                            android:textSize="14sp"
                                            android:layout_gravity="center_vertical"
                                            android:id="@+id/txt_Time_User_Device"
                                            android:paddingEnd="3dp"
                                            android:gravity="center_vertical"
                                            android:textColor="#000"
                                            tools:ignore="RtlSymmetry" />

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:id="@+id/ln_Renew"
                                        android:layout_marginTop="5dp"
                                        android:layout_height="wrap_content"
                                        tools:ignore="UseCompoundDrawables">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/renew"
                                            android:layout_marginBottom="4dp"
                                            tools:ignore="ContentDescription" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/Renew"
                                            android:textStyle="bold"
                                            android:textSize="17sp"
                                            android:gravity="center_vertical"
                                            android:textAllCaps="false"
                                            android:layout_marginStart="1dp"
                                            android:textColor="#fcb453"
                                            android:id="@+id/txt_Time_User_Renew_Device"
                                            android:paddingStart="2dp"
                                            android:paddingEnd="10dp"
                                            android:paddingBottom="4dp"
                                            android:layout_gravity="center_vertical"

                                            />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/DeviceList"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        android:textColor="#515151"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/NoDevice"
                        android:id="@+id/txtNoDevice"
                        android:textSize="13sp"
                        android:textColor="#515151"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/rclDevice"
                        android:minHeight="250dp"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/ln_Number_Device"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="13sp"
                            android:id="@+id/txtNumberDevice"
                            android:textColor="#000"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="5dp"
                            />
                    </LinearLayout>

                    <!--<Button-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_marginLeft="80dp"-->
                    <!--android:layout_marginRight="80dp"-->
                    <!--android:layout_weight="0.9"-->
                    <!--android:text="@string/AddDevice"-->
                    <!--android:textColor="@color/bgLogo"-->
                    <!--android:textStyle="bold"-->
                    <!--android:id="@+id/btn_Add_Device"-->
                    <!--android:textAllCaps="false"-->
                    <!--android:textSize="15sp"-->
                    <!--android:background="@drawable/background_login_btn"-->
                    <!--/>-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:id="@+id/ln_logout"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="match_parent">
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="50dp"
                                android:text="@string/LogOut"
                                android:paddingRight="50dp"
                                android:textColor="@color/white"
                                android:drawableStart="@drawable/log_out"
                                android:textStyle="bold"
                                android:drawablePadding="10dp"
                                android:id="@+id/btnLogOut"
                                android:layout_gravity="center_horizontal"
                                android:textAllCaps="false"
                                android:textSize="15sp"
                                android:background="@drawable/background_logout_btn"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginTop="30dp"
                                android:gravity="center_horizontal"
                                android:layout_marginStart="5dp"
                                android:textColor="#000"
                                android:layout_marginEnd="5dp"
                                android:id="@+id/txt_Copyright_launch"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                tools:ignore="ObsoleteLayoutParam" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/aviManagement"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:visibility="gone"
                    app:indicatorColor="@color/grey_250"
                    app:indicatorName="BallSpinFadeLoaderIndicator" />
            </FrameLayout>
        </LinearLayout>
</LinearLayout>