<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Card_View_Contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/img_User_Contact"

                android:layout_height="40dp" />
            <ImageView
                android:layout_width="40dp"
                android:background="@drawable/icon_transparent"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="T"
                android:id="@+id/img_Text_Icon"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:textStyle="normal"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Diego Simeone"
            android:textColor="#242425"
            android:textSize="17sp"
            android:maxLines="1"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:id="@+id/txt_name_Contact"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>