<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view_SMS"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="3dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingLeft="2dp"
        android:weightSum="10"
        android:paddingTop="3dp"
        android:layout_height="80dp">
        <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/imgUser_SMS"
        android:src="@drawable/user"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.2"
        android:background="@android:color/transparent"
        app:civ_border_color="#a4a2a2"
        app:civ_border_width="1dp"
        android:layout_height="40dp"  />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:text=""
                android:paddingEnd="3dp"
                android:textSize="19sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="2dp"
                android:textColor="@color/bgToolbar"
                android:id="@+id/txt_User_Name_SMS"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Loading..."
                android:textColor="#000"
                android:layout_marginRight="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingBottom="1dp"
                android:id="@+id/txt_Message__SMS"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_time_SMS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:text="2014-09-17"
                android:textColor="@color/bgToolbar" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:39:35"
                android:paddingRight="10dp"
                android:gravity="center_horizontal"
                android:id="@+id/txt_minutes__SMS"
                android:textColor="#000"
                 />
    </LinearLayout>
</LinearLayout>



</androidx.cardview.widget.CardView>
