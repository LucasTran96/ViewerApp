<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lnl_Call_History"
    android:layout_marginBottom="5dp"
    android:background="#fff"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:id="@+id/txt_Date_Call"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="2020-08-07 23:59:59"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:id="@+id/cv_Call_History"
        android:layout_marginBottom="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="45dp"
            android:layout_marginStart="10dp"
            android:id="@+id/img_Name_Call_History"
            android:src="@drawable/icon_person"
            android:layout_gravity="center_vertical"
            android:layout_height="45dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bgToolbar"
                android:id="@+id/txt_Name_Call_History"
                android:textSize="20sp"
                android:text=""/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="15dp"
                    android:id="@+id/img_Status_Call_History"
                    android:src="@drawable/incoming_call"
                    android:layout_gravity="center_vertical"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="7dp"
                    android:id="@+id/txt_Number_Call_History"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="911"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:id="@+id/txt_Date_Call_History"
                    android:layout_height="wrap_content"
                    android:text="911"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/grey_200"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        android:layout_height="0.8dp"/>
</LinearLayout>