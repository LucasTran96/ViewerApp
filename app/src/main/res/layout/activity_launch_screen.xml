<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_bg_shopp"
    tools:context=".View.LaunchScreen">
    <ImageView
        android:layout_width="250dp"
        android:src="@drawable/icon_cp9_app"
        android:id="@+id/img_Logo_Launch"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewerApp"
            android:textStyle="bold"
            android:textSize="50sp"
            android:id="@+id/txt_AppName_Launch"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:id="@+id/txt_VersionName_Launch"
        android:textColor="#fff"
        android:gravity="center_horizontal"

        android:layout_gravity="center_horizontal"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="120dp"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:indeterminateTint="@android:color/white"
        android:layout_height="wrap_content" />


</LinearLayout>