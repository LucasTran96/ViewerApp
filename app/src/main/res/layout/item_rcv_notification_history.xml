<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_Notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="3dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/notification_icon"
                android:layout_marginStart="5dp"
                android:padding="1dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/img_icon_YouTube"
                android:layout_height="40dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Telegram"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:id="@+id/txt_App_Name_Notification"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Todayâ€™s birthdays"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="10dp"
                        android:textColor="#393535"
                        android:id="@+id/txt_Title_Notification"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:text="Luvis has a birthday today!"
                    android:textColor="#3E3C3C"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:paddingBottom="1dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txt_Content_Notification"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="2020-08-06 15:06"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="right"
                        android:textColor="@color/grey_600"
                        android:paddingBottom="3dp"
                        android:id="@+id/txt_Date_Notification"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/ln_Info_Notification"
                        android:gravity="right"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_info_blue_24dp"
                            android:layout_height="24dp"/>
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>