<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_Application"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="3dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/android_icon"
            android:layout_marginStart="5dp"
            android:id="@+id/img_icon_AppUsage"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="com.android.play"
                    android:textColor="#3366ff"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingBottom="1dp"
                    android:id="@+id/txt_name_App_History"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="2020-08-06 15:06"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:id="@+id/txt_Date_App_History"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:id="@+id/txt_Status_App"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="#4DDF53"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>