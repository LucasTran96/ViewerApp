<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f6"
    android:id="@+id/swp_AppUsageHistory"
    android:layout_height="match_parent"
    tools:context=".View.ApplicationUsageHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#f4f4f6"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar_Application_History"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#fff"/>
       <!-- <RelativeLayout
            android:layout_width="match_parent"
            android:background="#f4f4f6"
            android:layout_height="match_parent">
            <TextView

                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:textStyle="bold|italic"
                android:id="@+id/txt_No_Data_App"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="#252424"
                android:background="@color/grey_300"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:background="#f4f4f6"
                android:layout_above="@+id/txt_No_Data_App"
                android:id="@+id/rcl__Application_History"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/txt_No_Data_App"
                    android:textStyle="bold|italic"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:minWidth="200dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#252424"
                    android:background="@drawable/customlastupdate"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content"
                    />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:background="#f4f4f6"
                    android:layout_above="@+id/txt_No_Data_App"
                    android:id="@+id/rcl__Application_History"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:id="@+id/progressBar_AppUsage"
                    android:layout_marginBottom="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/aviAppUsage"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:visibility="gone"
                app:indicatorColor="@color/grey_250"
                app:indicatorName="BallSpinFadeLoaderIndicator" />

        </FrameLayout>



    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>