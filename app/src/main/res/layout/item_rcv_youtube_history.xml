<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_YouTube"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="3dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/ic_youtube"
                android:layout_marginStart="5dp"
                android:padding="1dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/img_icon_YouTube"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:text="Permission to Dance Official MV"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingBottom="1dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txt_Video_Name_YouTube"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:text="HYBE LABELS"
                        android:textSize="15sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/grey_600"
                        android:id="@+id/txt_Chanel_Name_YouTube"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:text="3,286,255 views"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/grey_600"
                        android:id="@+id/txt_Views_YouTube"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="2020-08-06 15:06"
                    android:textSize="14sp"

                    android:textColor="@color/grey_600"
                    android:id="@+id/txt_Date_YouTube"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="2020-08-06 15:06"
                    android:textSize="14sp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/grey_600"
                    android:id="@+id/txt_Date_YouTube"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>-->

    </LinearLayout>
</androidx.cardview.widget.CardView>