<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fdfdfe"
    android:layout_height="match_parent"
    tools:context=".View.SyncSettings">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:background="@drawable/custombgshopp"
                android:layout_height="40dp"
                tools:ignore="RtlHardcoded">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/SyncSetting"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/btn_Sync_Settings"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:layout_height="40dp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/custombgshopp"
                android:layout_height="125dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/img_PhoneStyle"
                    android:src="@drawable/phone_android"
                    android:layout_height="100dp"
                    tools:ignore="ContentDescription" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:layout_height="match_parent"
                    tools:ignore="RtlSymmetry">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:id="@+id/txt_NamePhone"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:text="Google Pixel 2XL"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/DeviceOS"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:paddingStart="1dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:paddingEnd="3dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/txt_PhoneStyle"
                            android:paddingStart="5dp"
                            android:text=""
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/TargetVersion"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:paddingStart="1dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:paddingEnd="3dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/txt_PhoneVersion"
                            android:paddingStart="5dp"
                            android:text=""
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/LastSync"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:paddingStart="1dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:paddingEnd="3dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/txt_Last_Sync"
                            android:paddingStart="5dp"
                            android:text=""
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#fff"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rcl_Dashboard"
                android:background="@color/grey_200"
                android:paddingTop="10dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

</LinearLayout>